#include<stdio.h>
#include<stdlib.h>
#include<string.h>

/* CODIGO DESENVOLVIDO PARA FINS DE EXERCICIO EM PROGRAMAÇÃO
*  ALUNO: FRANCISCO PIRES JUNIOR
*  CURSO: CIÊNCIA DA COMPUTAÇÃO - UNIVERSIDADE FEDERAL DE RORAIMA
*
* 15. Escreva um programa para converter uma cadeia de caracteres de letras maiúsculas em
* letras minúsculas. Dica: some 32 dos caracteres cujo código ASCII está entre 65 e 90.
*/


int main(){
	
	char str[50], j;		   
	
	printf("String: ");    
	fgets(str,50,stdin);
	
	printf("%s\n",str);
	
	for(j=0 ; j < strlen(str) ; j++){
		str[j] -= 32;
	}
	
	puts(str);
	printf("\n");
	
	return 0;
}
